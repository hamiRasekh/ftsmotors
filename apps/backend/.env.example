# Backend Environment Variables
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql://ftsmotors:ftsmotors123@postgres:5432/ftsmotors?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (used for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated list of allowed origins)
# Leave empty in development to allow all origins
# In production, specify exact origins: http://yourdomain.com,https://yourdomain.com
# Examples:
#   - For local network access: http://192.168.1.100:3000,http://localhost:3000
#   - For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=
