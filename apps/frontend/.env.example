# Frontend Environment Variables
# Copy this file to .env.local and update the values

# Backend API URL
# For client-side requests (will be proxied through Next.js rewrites)
# In development: http://localhost:4000
# In production: your production backend URL
NEXT_PUBLIC_API_URL=http://localhost:4000

# Frontend Site URL
# Used for SEO, sitemap, and canonical URLs
# In development: http://localhost:3000
# In production: your production frontend URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Backend API URL (Server-side only)
# Used for server-side requests in Docker environment
# In Docker: http://backend:4000
# In local development: http://localhost:4000
# This is optional and will fallback to NEXT_PUBLIC_API_URL
API_URL=http://localhost:4000

# Node Environment
# development | production
NODE_ENV=development
